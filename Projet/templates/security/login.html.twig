{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center items-center h-screen">
        <div class="card w-full max-w-md bg-base-100 shadow-xl">
            <div class="card-body">
                <h1 class="text-2xl font-bold mb-6 text-center">Se connecter</h1>

                {% if error %}
                    <div class="alert alert-error shadow-lg mb-4">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                            <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="form-control w-full">
                        <label class="label" for="inputEmail">
                            <span class="label-text">Email</span>
                        </label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input input-bordered w-full" autocomplete="email" required autofocus>
                    </div>

                    <div class="form-control w-full mt-4">
                        <label class="label" for="inputPassword">
                            <span class="label-text">Mot de passe</span>
                        </label>
                        <input type="password" name="password" id="inputPassword" class="input input-bordered w-full" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary w-full mt-6" type="submit">Se connecter</button>
                </form>

                <div class="text-center mt-4">
                    <span>Pas de compte ?</span>
                    <a href="{{ path('app_register') }}" class="text-primary hover:underline">S'inscrire</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}