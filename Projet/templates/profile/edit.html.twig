{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen">
        <div class="card w-full max-w-md bg-base-100 shadow-xl">
            <div class="card-body">
                <h1 class="text-2xl font-bold mb-6">Modifier le profil</h1>

                {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

                <div class="form-control w-full">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-control w-full">
                    {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>

                <div class="form-control w-full">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'input input-bordered w-full'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <button type="submit" class="btn btn-primary w-full">Enregistrer les modifications</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}